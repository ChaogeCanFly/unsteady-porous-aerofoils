
x = linspace(-1,1);
n = 1;
a = 0;
b = .5;

a = jacobiIntFun(x,a,b,n);

approx = trapz(x,myJacobiP( numel(x), n, a, b, x.' ).';

plot(x,a)
hold on
plot(x,approx)
hold off


function I = jacobiIntFun(xVar,aVar,bVar,nVar)

if nVar == 0

    I = 2^aVar.*(1+x).^(1+bVar)./(1+bVar).*hypergeom([-aVar,1+bVar],2+bVar,(1+xVar)/2);
    
else
    %myJacobiP( nVar, nVar, aVar, bVar, xVar )
    I = -(1-xVar).^(aVar+1).*(1+xVar).^(bVar+1)./(2*nVar).*myJacobiP( numel(xVar), nVar, aVar, bVar, xVar.' ).';
    
end

end